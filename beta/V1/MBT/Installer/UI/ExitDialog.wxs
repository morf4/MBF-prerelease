<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Fragment>
        <UI>
            <Dialog Id="CustomExitDialog" Width="370" Height="270" Title="!(loc.ExitDialog_Title)">
              <Control Id="Finish" Type="PushButton" X="304" Y="243" Width="56" Height="17" Default="yes" Cancel="yes" Text="!(loc.WixUIFinish)">
                <Publish Event="EndDialog" Value="Return">1</Publish>
              </Control>
              <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.ExitDlgBannerBitmap)" />
              <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
              <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

              <Control Id="Description" Hidden="yes" Type="Text" X="25" Y="70" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogDescription)">
                <Condition Action="show">WixUI_InstallMode = "InstallDefault"</Condition>
                <Condition Action="show">WixUI_InstallMode = "InstallCustom"</Condition>
              </Control>
              <Control Id="Title" Hidden="yes" Type="Text" X="15" Y="15" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogTitle)">
                <Condition Action="show">WixUI_InstallMode = "InstallDefault"</Condition>
                <Condition Action="show">WixUI_InstallMode = "InstallCustom"</Condition>
              </Control>

              <Control Id="DescriptionChange" Hidden="yes" Type="Text" X="25" Y="70" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogDescriptionChange)">
                <Condition Action="show">WixUI_InstallMode = "Change"</Condition>
              </Control>
              <Control Id="TitleChange" Hidden="yes" Type="Text" X="15" Y="12" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogTitleChange)">
                <Condition Action="show">WixUI_InstallMode = "Change"</Condition>
              </Control>

              <Control Id="DescriptionRepair" Hidden="yes" Type="Text" X="25" Y="70" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogDescriptionRepair)">
                <Condition Action="show">WixUI_InstallMode = "Repair"</Condition>
              </Control>
              <Control Id="TitleRepair" Hidden="yes" Type="Text" X="15" Y="15" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogTitleRepair)">
                <Condition Action="show">WixUI_InstallMode = "Repair"</Condition>
              </Control>

              <Control Id="DescriptionRemove" Hidden="yes" Type="Text" X="25" Y="70" Width="320" Height="40" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogDescriptionRemove)">
                <Condition Action="show">WixUI_InstallMode = "Remove"</Condition>
              </Control>
              <Control Id="TitleRemove" Hidden="yes" Type="Text" X="15" Y="15" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.ExitDialogTitleRemove)">
                <Condition Action="show">WixUI_InstallMode = "Remove"</Condition>
              </Control>

              <Control Id="LaunchApplicationCheckBox" Type="CheckBox" X="25" Y="190" Width="220" Height="15" Hidden="yes" Property="WIXUI_LAUNCHAPPCHECKBOX" CheckBoxValue="1" Text="!(loc.LaunchApplicationText)">
                <Condition Action="show">NOT Installed</Condition>
              </Control>
              
              <Control Id="OptionalCheckBox" Type="CheckBox" X="25" Y="210" Width="220" Height="15" Hidden="yes" Property="WIXUI_EXITDIALOGOPTIONALCHECKBOX" CheckBoxValue="1" Text="[WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT]">
                <Condition Action="show">WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT AND NOT Installed</Condition>
              </Control>
            </Dialog>

            <InstallUISequence>
              <Show Dialog="CustomExitDialog" OnExit="success" />
            </InstallUISequence>

            <AdminUISequence>
              <Show Dialog="CustomExitDialog" OnExit="success" />
            </AdminUISequence>

          <Publish Dialog="CustomExitDialog"
            Control="Finish"
            Event="DoAction"
            Value="ViewReadme">WIXUI_EXITDIALOGOPTIONALCHECKBOX AND NOT Installed</Publish>

          <Publish Dialog="CustomExitDialog"
            Control="Finish"
            Event="DoAction"
            Value="LaunchApplication">WIXUI_LAUNCHAPPCHECKBOX AND NOT Installed</Publish>
        </UI>

      <!--View readme after installation completes-->
      <CustomAction Id="ViewReadme"
                  Directory="INSTALLDIR"
                  ExeCommand="[SystemFolder]write.exe &quot;[SequenceAssemblerFolder]readme.txt&quot;"
                  Return="asyncNoWait" />

      <!-- Launch Sequence Assembler after installation completes -->
      <CustomAction Id="LaunchApplication"
                    Directory="INSTALLDIR"
                    ExeCommand="[SequenceAssemblerFolder]\SequenceAssembler.exe"
                    Return="asyncNoWait" />
    </Fragment>
</Wix>
